@*List type to fetch list of StudentDetails*@
@model List<StudentDetails>

@*dynamically changing title of webapp*@
@{
    ViewData["Title"] = "List of Students";
}
<a asp-action="Add Student" class="btn btn-success">Create</a>
<h2>List of Students</h2>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Faculty
                </th>
                <th>
                    Email
                </th>
                <th>
                    Address
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @*Looping through StudentDetails table in database*@
            @foreach (var item in Model)
            {
               <tr>
                   <td>
                       @item.Id
                   </td>
                   <td>
                       @item.Name
                   </td>
                    <td>
                        @item.Faculty
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                       <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                   </td>
               </tr>
            }
        </tbody>
    </table>
</div>